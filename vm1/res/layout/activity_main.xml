<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/voice"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc1.MainActivity" >

    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/greeting"
        android:textSize="24dip" />

    <Button
        android:id="@+id/readMail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:text="@string/readMail"
        android:textColor="#ff0000"
        android:textSize="30dip" />
   
    
    <Button
        android:id="@+id/writeMail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/readMail"
        android:layout_centerHorizontal="true"
        android:text="@string/writeMail"
        android:textColor="#00ff00"
        android:textSize="30dip" />

    <Button
        android:id="@+id/settings"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/writeMail"
        android:layout_centerHorizontal="true"
        android:text="@string/settings"
        android:textColor="#0000ff"
        android:textSize="30dip" />

    <Button
        android:id="@+id/syncMail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:text="@string/syncMail"
        android:textColor="#ffff00"
        android:textSize="30dip" />
     
    <Button
        android:id="@+id/searchMail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/syncMail"
        android:layout_centerHorizontal="true"
        android:text="@string/searchMail"
        android:textColor="#ff0000"
        android:textSize="30dip" />

    <Button
        android:id="@+id/debugging"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchMail"
        android:layout_centerHorizontal="true"
        android:text="@string/debugging"
        android:textColor="#ffff00"
        android:textSize="30dip" />
 
</RelativeLayout>