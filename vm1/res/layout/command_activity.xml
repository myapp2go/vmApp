<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/voice"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc1.MainActivity" >

    <Button
        android:id="@+id/command1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/command1"
        android:textColor="#ff0000"
        android:textSize="30dip" />

    <Button
        android:id="@+id/command2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/command1"
        android:layout_centerHorizontal="true"
        android:text="@string/command2"
        android:textColor="#00ff00"
        android:textSize="30dip" />    
    
    <Button
        android:id="@+id/command3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/command2"
        android:layout_centerHorizontal="true"
        android:text="@string/command3"
        android:textColor="#0000ff"
        android:textSize="30dip" />

    <Button
        android:id="@+id/save"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/command3"
        android:layout_centerHorizontal="true"
        android:text="@string/save"
        android:textColor="#ffff00"
        android:textSize="30dip" />
         
    <Button
        android:id="@+id/clean"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/save"
        android:layout_centerHorizontal="true"
        android:text="@string/clean"
        android:textColor="#00ffff"
        android:textSize="30dip" />
        
</RelativeLayout>