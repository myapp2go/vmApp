<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
        
<GridLayout 
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:alignmentMode="alignBounds"
    android:background="@drawable/voice"
    android:columnCount="2"
    android:columnOrderPreserved="false"
    android:useDefaultMargins="true" >

    <EditText
        android:id="@+id/contactName1"
        android:layout_column="0"
        android:layout_row="0"
        android:editable="true"
        android:enabled="true"
        android:padding="5dp"
        android:text="paul"
        android:textColor="#000000"
        android:width="100dp" />

    <EditText
        android:id="@+id/contactEmail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:editable="true"
        android:enabled="true"
        android:hint="@string/emailAddressHint"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:text="paultchan@yahoo.com"
        android:textColor="#000000" >
    </EditText>

    <EditText
        android:id="@+id/contactName2"
        android:layout_column="0"
        android:layout_row="1"
        android:editable="true"
        android:enabled="true"
        android:padding="5dp"
        android:text="tony"
        android:textColor="#000000"
        android:width="100dp" />

    <EditText
        android:id="@+id/contactEmail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:editable="true"
        android:enabled="true"
        android:hint="@string/emailAddressHint"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:text="paulchennk@yahoo.com"
        android:textColor="#000000" >
    </EditText>

    <EditText
        android:id="@+id/contactName3"
        android:layout_column="0"
        android:layout_row="2"
        android:editable="true"
        android:enabled="true"
        android:padding="5dp"
        android:text="david"
        android:textColor="#000000"
        android:width="100dp" />

    <EditText
        android:id="@+id/contactEmail3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:editable="true"
        android:enabled="true"
        android:hint="@string/emailAddressHint"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:text="davidchennk@gmail.com"
        android:textColor="#000000" >
    </EditText>

    <EditText
        android:id="@+id/contactName4"
        android:layout_column="0"
        android:layout_row="3"
        android:editable="true"
        android:enabled="true"
        android:padding="5dp"
        android:text="davis"
        android:textColor="#000000"
        android:width="100dp" />

    <EditText
        android:id="@+id/contactEmail4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:editable="true"
        android:enabled="true"
        android:hint="@string/emailAddressHint"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:text="davischennk@gmail.com"
        android:textColor="#000000" >
    </EditText>

    <EditText
        android:id="@+id/contactName5"
        android:layout_column="0"
        android:layout_row="4"
        android:editable="true"
        android:enabled="true"
        android:padding="5dp"
        android:text="allen"
        android:textColor="#000000"
        android:width="100dp" />

    <EditText
        android:id="@+id/contactEmail5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:editable="true"
        android:enabled="true"
        android:hint="@string/emailAddressHint"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:text="allen.kuo@timebyte.com"
        android:textColor="#000000" >
    </EditText>

    <EditText
        android:id="@+id/contactName6"
        android:layout_column="0"
        android:layout_row="5"
        android:editable="true"
        android:enabled="true"
        android:padding="5dp"
        android:text=""
        android:textColor="#000000"
        android:width="100dp" />

    <EditText
        android:id="@+id/contactEmail6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:editable="true"
        android:enabled="true"
        android:hint="@string/emailAddressHint"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:text=""
        android:textColor="#000000" >
    </EditText>

    <Button
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:text="@string/addContact" />
</GridLayout>

</ScrollView>